@model Dloc.Domain.Entities.Mutacao

@{
    ViewData["Title"] = "Mutação";
}

<div class="container">
    <form asp-action="Create">
        <div class="card">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-header"><b>Cadastrar @ViewData["Title"]</b></div>
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="ds_mutacao" class="control-label"></label>
                        <input asp-for="ds_mutacao" class="form-control" autofocus/>
                        <span asp-validation-for="ds_mutacao" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-md-12 pull-right text-right">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-sm" />
                    <a asp-action="Index" class="btn btn-primary btn-sm">Voltar</a>
                </div>
            </div>
        </div>
    </form>
</div>